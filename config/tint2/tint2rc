# Execp 1 : print disk usage for the root partition
execp = new
execp_command = df -h | awk '$NF == "/" { print " "$6" "$2 " ("$5")  "}'
execp_background_id = 2
execp_interval = 10
execp_centered = 1
execp_font = Liberation Mono 9
execp_font_color = #ffaaaa 100
execp_padding = 0 0
execp_tooltip = Root partition usage

# Execp 2 : print the number of CPU cores
execp = new
execp_command = echo "$(nproc) cores  "
execp_interval = 0
execp_background_id = 2
execp_centered = 1
execp_font = Liberation Mono 9
execp_font_color = #aaffaa 100
execp_padding = 0 0
execp_tooltip = Total amount of CPU 

# Execp 3 : show the memory usage
execp = new
execp_command = awk '/MemTotal:/ {total=$2+0}; /MemAvailable:/ {free=$2+0}; END { used=total-free; percentage_used=used*100/total; printf "Mem: %0.2fGB (%d%%)  \n", used/(1024*1024), percentage_used }' /proc/meminfo
execp_interval = 2
execp_background_id = 2
execp_continuous = 1
execp_centered = 1
execp_font = Liberation Mono 9
execp_font_color = #ffffaa 100
execp_padding = 0 1
execp_tooltip = Memory used

# Execp 4 : show the RTT to the gateway
execp = new
execp_command = awk '/:/ { print $1" "int($3 * 100 / 70)"% "; fflush(); }' /proc/net/wireless
execp_continuous = 1
execp_background_id = 2
execp_interval = 5
execp_markup = 1
execp_font_color = #ffffdd 100
execp_font = monospace 9
execp_tooltip = Wireless connectivity

# Execp 5 : show the RTT to the gateway
execp = new
execp_command = ping -i 1 -W 1 -O -D -n $(ip route | awk '/default via/ {print $3}') | awk '/no/ { print "<span foreground=\"#faa\">(timeout)  </span>"; fflush(); }; /time=/ { gsub(/time=/, "", $8); printf "<span foreground=\"#7af\">(%2.0f %s)</span>\n", $8, $9; fflush(); }'
execp_continuous = 1
execp_background_id = 2
execp_interval = 1
execp_markup = 1
execp_font_color = #ffffdd 100
execp_font = monospace 9
execp_tooltip = Wireless connectivity

# Battery
battery = 1
